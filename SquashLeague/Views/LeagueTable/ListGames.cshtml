@model IEnumerable<SquashLegaue.Models.GameResult>

@{
    ViewBag.Title = "ListGames";
}

<h2>ListGames</h2>

<table>
    <tr>
        <th>
            Game type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfGame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player2.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player1Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player2Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameTypeDisplay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfGame)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player2.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player1Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player2Score)
        </td>
        <td>
           <!-- @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |-->
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to league table", "Index")
</div>