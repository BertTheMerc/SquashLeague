@model IEnumerable<SquashLegaue.Models.LeagueTable>
<h2>@ViewBag.Message</h2>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        @if (ViewContext.HttpContext.GetOverriddenBrowser().IsMobileDevice)
        { 
            <th>
                M
            </th>
            <th>
                W
            </th>
            <th>
                D
            </th>
            <th>
                L
            </th>
            <th>
                GW
            </th>
            <th>
                GL
            </th>
            <th>
                GD
            </th>
            <th>
                P
            </th>
            <th>
                W%
            </th>
        }
        else
        {
        <th>
            @Html.DisplayNameFor(model => model.Matchs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Win)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Draw)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesWon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesLost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesDiff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinPercentage)
        </th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matchs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Win)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Draw)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesWon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesLost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesDiff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WinPercentage)
        </td>
    </tr>
}
</table>

<div data-role="footer">
    @Html.ActionLink("Add unscheduled game result", "AddResult", "LeagueTable")@Html.ActionLink("List Games", "ListGames", "LeagueTable")
</div>
   
