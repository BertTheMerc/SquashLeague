@model SquashLegaue.Models.Game

@{
    ViewBag.Title = "ScheduleGame";
}

<h2>Schedule a game</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Game</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateOfGame)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateOfGame)
            @Html.ValidationMessageFor(model => model.DateOfGame)
        </div>

       <div class="editor-label">
            @Html.LabelFor(model => model.Player1)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor( model => model.Player1SelectedItemId,  Model.PlayerList, "Select a player" )
            @Html.ValidationMessageFor(model => model.Player1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Player2)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor( model => model.Player2SelectedItemId,  Model.PlayerList, "Select a player" )
            @Html.ValidationMessageFor(model => model.Player2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GameType) 
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GameType)
            @Html.ValidationMessageFor(model => model.GameType)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to League Table", "Index", "LeagueTable")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
